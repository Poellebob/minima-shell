include ~/.config/minima/sway.conf
include ~/.config/scroll/config.d/*

# Autostart applications
exec swww-daemon
exec dunst
exec env QT_QPA_PLATFORMTHEME=qt6ct GTK_THEME=Breeze-Dark qs -d
exec sh -c "~/.config/hypr/getkeys.sh"
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec systemctl --user start polkit-gnome
exec wl-paste --watch cliphist store
exec_always --no-startup-id sh -c 'scrollmsg input type:keyboard xkb_layout "$(localectl status | sed -n "s/^\s*X11 Layout:\s*//p")"'
exec ~/.config/scroll/set-xft-dpi.sh
